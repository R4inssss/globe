pip install pygame

import pygame
import sys

# Initialize Pygame
pygame.init()

# Screen dimensions
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Banner Starting Screen")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)

# Font setup
font = pygame.font.Font(None, 74)
text = font.render("Welcome to the Game! (Press enter to start)", True, BLACK)

# Function to display the banner screen
def show_banner():
    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_RETURN:  # Press Enter to continue
                    return  # Exit the banner screen

        # Fill the screen with white color
        screen.fill(WHITE)

        # Draw the text in the center of the screen
        text_rect = text.get_rect(center=(WIDTH // 2, HEIGHT // 2))
        screen.blit(text, text_rect)

        # Update the display
        pygame.display.flip()

        # Frame rate
        pygame.time.Clock().tick(60)

# Main function
def main():
    show_banner()
    # Here you can add the rest of your game logic
    print("Game starts here!")

if __name__ == "__main__":
    main()
